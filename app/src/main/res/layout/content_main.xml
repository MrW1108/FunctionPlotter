<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linearLayout">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sin(x)"
            android:layout_weight="2"
            android:paddingRight="10sp"
            android:id="@+id/txtFunction"
            />

        <Button
            android:id="@+id/buttonCE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#11EDCC"
            android:text="CE"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonPlot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#08AAF3"
            android:text="绘制"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/linearLayout"
        android:id="@+id/linearLayout2">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_sin"
        android:text="sin(x)"
        android:textStyle="bold"
        android:layout_weight="1"
        android:textAllCaps="false"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_cos"
        android:text="cos(x)"
        android:textStyle="bold"
        android:layout_weight="1"
        android:textAllCaps="false"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_tg"
        android:layout_weight="1"
        android:textStyle="bold"
        android:text="tg(x)"
        android:textAllCaps="false"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_ctg"
        android:layout_weight="1"
        android:textStyle="bold"
        android:text="ctg(x)"
        android:textAllCaps="false"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/linearLayout2"
        android:id="@+id/linearLayout3">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="x^2"
            android:textStyle="bold"
            android:id="@+id/button_x2"
            android:textAllCaps="false"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x^3"
            android:layout_weight="1"
            android:textStyle="bold"
            android:id="@+id/button_x3"
            android:textAllCaps="false"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="√x"
            android:layout_weight="1"
            android:textStyle="bold"
            android:id="@+id/button_genhao"
            android:textAllCaps="false"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/x"
            android:textStyle="bold"
            android:layout_weight="1"
            android:id="@+id/button_fenshu"
            android:textAllCaps="false"
            />

    </LinearLayout>

<com.example.functionplotter.CustomView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout3"
        android:layout_alignParentEnd="true"
        android:id="@+id/plotview"
       />


</RelativeLayout>
